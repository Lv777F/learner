{
  "name": "solid-rx",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/solid-rx/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/vite:build",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/libs/solid-rx"
      }
    },
    "test": {
      "executor": "@nx/vite:test",
      "outputs": ["coverage/libs/solid-rx"],
      "options": {
        "passWithNoTests": true,
        "reportsDirectory": "../../coverage/libs/solid-rx"
      }
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["libs/solid-rx/**/*.ts"]
      }
    }
  },
  "tags": []
}
